<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Display</title>
  </head>
  <body>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }
      .btn-edit {
          background-color: rgb(255, 212, 132);
          outline: none;
          border: none;
          height: 25px;
          width: 60px;
          border-radius: 3px;
          cursor: pointer;
          display: inline-block;
          color: black;
          text-decoration: none;
          text-align: center;
      }
      .btn-delete {
        background-color: rgb(184, 0, 0);
          outline: none;
          border: none;
          height: 25px;
          width: 60px;
          border-radius: 3px;
          cursor: pointer;
          color: aliceblue;
          display: inline-block;
          text-decoration: none;
          text-align: center;
      }
    </style>
    <table>
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>

      </tr>
      <% for(let i=0; i<data.length; i++) { %>
        <tr>
            <td><%= data[i].email %></td>
            <td><%= data[i].lastName %></td>
            <td><%= data[i].firstName %></td>
            <td><%= data[i].address %></td>
            <td>
                <a href="/edit-crud?id=<%= data[i].id %>" class="btn-edit" type="button">Edit</a>
                <a href="/delete-crud?id=<%= data[i].id %>" class="btn-delete" type="button">Delete</a>
            </td>
        </tr>
     <% } %>
    </table>
  </body>
</html>
